<footer class="o-footer o-footer--{{theme}}" data-o-component="o-footer" data-o-footer--no-js>
	<div class="o-footer__container">

		{{#matrix}}
		<div class="o-footer__row">
			<nav class="o-footer__matrix" role="navigation" aria-label="Useful links">
				{{#.}}
					<div class="o-footer__matrix-column o-footer__matrix-column--{{size}}">
						<h6 class="o-footer__matrix-title" o-footer-collapsible="{{collapsible}}">
							{{{title}}}
						</h6>
						<ul class="o-footer__matrix-list">
							{{#items}}
								<li class="o-footer__matrix-item">
									<a class="o-footer__matrix-link" href="{{href}}">{{{text}}}</a>
								</li>
							{{/items}}
						</ul>
					</div>
				{{/.}}
			</nav>
		</div>
		{{/matrix}}

		<div class="o-footer__copyright" role="contentinfo">
			<small>
				&#169; THE FINANCIAL TIMES LTD {{copyrightYear}}.
				<abbr title="Financial Times">FT</abbr> and ‘Financial Times’ are trademarks of The Financial Times Ltd.
			</small>
		</div>

	</div>
	<div class="o-footer__brand">
		<div class="o-footer__container">
			<div class="o-footer__brand-logo"></div>
		</div>
	</div>
</footer>
